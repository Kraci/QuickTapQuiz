<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textViewTeamName"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintRight_toLeftOf="@+id/textViewChecked"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded_corners_cell"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/cellText"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Team Name 1"/>

        <TextView
                android:id="@+id/textViewChecked"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintWidth_min="60dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_corners_cell"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/cellText"
                android:gravity="center"
                android:text="âœ“"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>